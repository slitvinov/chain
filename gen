awk 'BEGIN {
	n = 40
	for (i = 0; i < n; i++)
		print i, 0, 0	
	for (i = 0; i < n; i++)
		print i, 1, 0
	printf "" > "connect"
	for (i = 0; i < n - 1; i++) {
		print i, i + 1, 1 >> "connect"
		print i + n, i + n + 1, 1 >> "connect"
	}
	for (i = 0; i < n; i++)
		print i, i + n, 1 + 0.2*sin(10 * i/n) >>  "connect"
}'